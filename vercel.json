{
    "routes": [
        {
            "src": "/api",
            "dest": "/api/run.go"
        },
        {
            "src": "/apis",
            "dest": "/api/api.go"
        },
        {
            "src": "/apis/index",
            "dest": "/views/docs/index.html"
        },
        {
            "src": "/apis/docs/index",
            "dest": "/views/docs/docs.html"
        },
        {
            "src": "/apis/(?!(index$|docs/index$))(.*)",
            "dest": "/api/api.go"
        },
        {
            "src": "/wechat",
            "dest": "/api/wechat.go"
        },
        {
            "src": "/search",
            "dest": "/views/search/search.html"
        },
        {
            "src": "/login",
            "dest": "/views/search/login.html"
        },
        {
            "src": "/trending",
            "dest": "/api/trending.go"
        },
        {
            "src": "/404",
            "dest": "/views/404.html",
            "status": 404
        },
        {
            "src": "/docs",
            "dest": "/views/docs.html"
        }
    ],
    "env": {
        "JWT_EXPIRES_AT": "72",
        "GITHUB_OWNER": "xiaoxuan6",
        "GITHUB_REPO": "resource",
        "MAIL_HOST": "smtp.qq.com",
        "MAIL_PORT": "587",
        "MAIL_TO": "1527736751@qq.com",
        "MAIL_SUBJECT": "Github Trending"
    },
    "crons": [
        {
            "path": "/api/trending.go",
            "schedule": "0 23 * * *"
        }
    ]
}
